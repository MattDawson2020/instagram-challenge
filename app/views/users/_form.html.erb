
<div>
  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %> 
    <%= f.label :image, "Add a profile picture" %>
    <%= f.file_field :image, class: "form-control" %> 

    <%= f.submit "Submit" %>
  <% end %>
</div>